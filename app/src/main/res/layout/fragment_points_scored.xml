<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fexicious.istatedemo.fragment.PointsScoredFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/title_points_scored" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:background="@color/cardview_dark_background"
        android:layout_margin="10px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="15dp">
        <com.flexicious.nestedtreedatagrid.FlexDataGrid
            android:id="@+id/pointScoredGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/grid_padding"
            >
        </com.flexicious.nestedtreedatagrid.FlexDataGrid>
    </android.support.v7.widget.CardView>

</FrameLayout>
