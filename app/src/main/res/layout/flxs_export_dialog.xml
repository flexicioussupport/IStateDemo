<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal|center_vertical"
    android:padding="20dp">

    <ScrollView
        android:id="@+id/flxs_scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <RadioGroup
        android:id="@+id/flxs_exportpopup_radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/flxs_exportpopup_currentpage_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/flxs_exportpopup_allpages_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />

        <RadioButton
            android:id="@+id/flxs_exportpopup_specifypages_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp" >

            <EditText
                android:id="@+id/flxs_exportpopup_startpage_et"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/flxs_exportpopup_to_tv"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/flxs_exportpopup_endpage_et"
                android:layout_width="50dp"
                android:layout_height="fill_parent" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/flxs_exportpopup_selectedrecords_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/flxs_exportpopup_exportformat_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        
        android:layout_margin="5dp" />
    <com.flexicious.controls.ComboBox
        android:id="@+id/flxs_exportpopup_combobox"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center">
        <Button 
            android:id="@+id/flxs_exportpopup_ok_btn"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            />
        <Button 
            android:id="@+id/flxs_exportpopup_email_btn"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            />
        <Button 
            android:id="@+id/flxs_exportpopup_cancel_btn"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            />
        
    </LinearLayout>
        </LinearLayout>
    </ScrollView>

    

</LinearLayout>