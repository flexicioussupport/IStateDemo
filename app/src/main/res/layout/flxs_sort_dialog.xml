<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/sortdialog_titletextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sortdialog_textview1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:gravity="center" />

        <com.flexicious.controls.ComboBox
            android:id="@+id/sortdialog_combobox1"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp" />

        <RadioGroup
            android:id="@+id/sortdialog_radiogroup1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/sortdialog_ascending_rb1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:checked="true" />

            <RadioButton
                android:id="@+id/sortdialog_descending_rb1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sortdialog_textview2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:gravity="center" />

        <com.flexicious.controls.ComboBox
            android:id="@+id/sortdialog_combobox2"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp" />

        <RadioGroup
            android:id="@+id/sortdialog_radiogroup2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/sortdialog_ascending_rb2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:checked="true" />

            <RadioButton
                android:id="@+id/sortdialog_descending_rb2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sortdialog_textview3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:gravity="center" />

        <com.flexicious.controls.ComboBox
            android:id="@+id/sortdialog_combobox3"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp" />

        <RadioGroup
            android:id="@+id/sortdialog_radiogroup3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/sortdialog_ascending_rb3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:checked="true" />

            <RadioButton
                android:id="@+id/sortdialog_descending_rb3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sortdialog_textview4"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:gravity="center" />

        <com.flexicious.controls.ComboBox
            android:id="@+id/sortdialog_combobox4"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp" />

        <RadioGroup
            android:id="@+id/sortdialog_radiogroup4"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/sortdialog_ascending_rb4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:checked="true" />

            <RadioButton
                android:id="@+id/sortdialog_descending_rb4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center" >

        <Button
            android:id="@+id/sortdialog_clearall_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/sortdialog_apply_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/sortdialog_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp" />
    </LinearLayout>

</LinearLayout>