<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fexicious.istatedemo.fragment.HittingPercentFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_hitting_percent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/hittingPercent" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:background="@color/cardview_dark_background"
        android:layout_margin="10px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/hittingPercent" />
        <com.flexicious.nestedtreedatagrid.FlexDataGrid
            android:id="@+id/hittingPercentGridView"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/grid_padding"
            android:layout_height="match_parent">
        </com.flexicious.nestedtreedatagrid.FlexDataGrid>
    </android.support.v7.widget.CardView>
</FrameLayout>
